@using Domain.Constants
@using Domain.Helpers
@model List<Application.Models.Booking.BookingDetailModel>

@{
    Layout = null;

    var serviceName = AppVersion.IsEnglishVersion ? "Service name" : "Tên dịch vụ";
    var price = AppVersion.IsEnglishVersion ? "Price" : "Giá dịch vụ";
    var createdAt = AppVersion.IsEnglishVersion ? "Created at" : "Tạo ngày";
    var updatedAt = AppVersion.IsEnglishVersion ? "Updated at" : "Sửa ngày";
    var action = AppVersion.IsEnglishVersion ? "Action" : "Thao tác";
    var text = AppVersion.IsEnglishVersion ? "Are you sure want to delete?" : "Bạn có chắc muốn xóa?";
    var title = AppVersion.IsEnglishVersion ? "Delete confirmation" : "Xác nhận xóa";
    
    var fullName = AppVersion.IsEnglishVersion ? "Full Name" : "Tên khách hàng";
    var email = AppVersion.IsEnglishVersion ? "Email" : "Email khách hàng";
    var phoneNumber = AppVersion.IsEnglishVersion ? "Phone Number" : "Số điện thoại";
    var date = AppVersion.IsEnglishVersion ? "Date" : "Ngày đặt lịch";
    var time = AppVersion.IsEnglishVersion ? "Time" : "Giờ đặt";
    var expertDate = AppVersion.IsEnglishVersion ? "Expert Date" : "Ngày mong muốn nhận";
}

<input type="hidden" value="@text" id="TextDelete"/>
<input type="hidden" value="@title" id="TitleDelete"/>

<div class="dt-ext table-responsive">
    <table class="display" id="grid-datatable">
        <thead>
        <tr>
            <th>@fullName</th>
            <th>@email</th>
            <th>@phoneNumber</th>
            <th>@date</th>
            <th>@expertDate</th>
            <th>@time</th>
            <th>@serviceName</th>
            <th>@price</th>
            @* <th>@createdAt</th> *@
            @* <th>@updatedAt</th> *@
            @* <th>@action</th> *@
        </tr>
        </thead>
        <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FullName</td>
                <td>@item.Email</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Date</td>
                <td>@item.ExpertDate</td>
                <td>@item.Time</td>
                <td>@item.ServiceName</td>
                <td>@item.Price.FormatMoney()</td>
                @* <td>@item.CreatedAt.ToDatetimeString()</td> *@
                @* <td>@item.UpdatedAt.ToDatetimeStringNullable()</td> *@
                @* <td> *@
                @*     <div style="text-align: center;"> *@
                @*         <i class="fa fa-trash-o hover-link btn-delete" style="color: red" title="Delete" data-id="@item.Id.ToString()"> *@
                @*         </i> *@
                @*         | <i class="fa fa-pencil hover-link btn-edit" style="color: #0a03ff" title="Edit" data-id="@item.Id.ToString()"></i> *@
                @*     </div> *@
                @* </td> *@
            </tr>
        }

        </tbody>
    </table>
</div>

<script src="~/admin/assets/js/datatable/datatables/jquery.dataTables.min.js"></script>
<script src="~/admin/assets/js/datatable/datatable-extension/dataTables.responsive.min.js"></script>
<script src="~/js/application/admin/datatable.js"></script>
@* <script src="~/js/application/admin/service/action.js"></script> *@